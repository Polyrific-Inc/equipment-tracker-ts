{
  "name": "equipment-tracker-ts",
  "version": "1.0.0",
  "description": "Modern TypeScript equipment tracking application for heavy machinery",
  "type": "module",
  "main": "dist/app.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/app.ts",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\" --ignore-pattern \"src/**/*.d.ts\" || echo \"No TypeScript files found to lint\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix --ignore-pattern \"src/**/*.d.ts\" || echo \"No TypeScript files found to lint\"",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" || echo \"No files found to format\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" || echo \"No files found to check formatting\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "validate": "npm run type-check && npm run lint && npm run test",
    "migrate": "tsx scripts/migrate.ts",
    "seed": "tsx scripts/seed.ts"
  },
  "keywords": [
    "equipment-tracking",
    "gps",
    "iot",
    "fleet-management",
    "typescript",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.4",
    "@types/config": "^3.3.2",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.0",
    "@types/supertest": "^2.0.15",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  }
}
